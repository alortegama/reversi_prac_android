<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".ConfigActivity">

        <TextView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/configuration"
            android:textSize="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iconUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/user1" />

        <TextView
            android:id="@+id/textUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/iconUser"
            android:text="@string/playerIdentifier"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/playerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textUser"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="18dp"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/iconTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/board1" />

        <TextView
            android:id="@+id/textTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/iconTable"
            android:text="@string/tableIdentifier"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconTable"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:checked="true"
                android:text="@string/midaGran"
                android:textSize="30sp"
                android:buttonTint="@color/Black"
                android:textColor="@color/Black"/>

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:text="@string/midaMitjana"
                android:textSize="30sp"
                android:buttonTint="@color/Black"
                android:textColor="@color/Black"/>

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/midaPetita"
                android:textSize="30sp"
                android:buttonTint="@color/Black"
                android:textColor="@color/Black"/>
        </RadioGroup>

        <ImageView
            android:id="@+id/iconDifficult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGroup1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/cpu1" />

        <TextView
            android:id="@+id/textDifficult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGroup1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/iconTable"
            android:text="@string/difficultIdentifier"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconDifficult"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:checked="true"
                android:text="@string/Difficult_easy"
                android:textSize="30sp"
                android:buttonTint="@color/Black"
                android:textColor="@color/Black"/>

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:text="@string/Difficult_normal"
                android:textSize="30sp"
                android:buttonTint="@color/Black"
                android:textColor="@color/Black"/>

        </RadioGroup>

        <ImageView
            android:id="@+id/iconTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGroup2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/clock1" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGroup2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/iconTime"
            android:text="@string/timeIdentifier"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconTime"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="@string/textCheck"
            android:textSize="30sp"
            android:buttonTint="@color/Black"
            android:textColor="@color/Black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkbox1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <Button
                android:id="@+id/buttonGoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:background="@drawable/colorbutton"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/back"
                android:text="@string/goBack"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/buttonGoBack"
                android:background="@drawable/colorbutton"
                android:text="@string/begin"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>