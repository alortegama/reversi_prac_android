<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/colorbutton"
        android:text="@string/start_match"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/buttonHelp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonStart"
        android:layout_marginEnd="58dp"
        android:background="@drawable/colorbutton"
        android:text="@string/help"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/buttonConsulta"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonHelp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/colorbutton"
        android:text="@string/checkItems"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonHelp"
        android:layout_alignTop="@+id/buttonConsulta"
        android:background="@drawable/colorbutton"
        android:text="@string/exit"
        android:textColor="@android:color/black" />

</RelativeLayout>